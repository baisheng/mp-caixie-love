  .c-love-card__body {
    display: flex;
    flex: 1;
    height: rpx(400);
    background: #fff;
    /*box-shadow: 0 0 1px 1px rgba(0,0,0,0.05), 0 2px 2px 0 rgba(0,0,0,0.10);*/
    box-shadow: 0 rpx(4) rpx(20) 0 rgba(0, 0, 0, 0.1);
