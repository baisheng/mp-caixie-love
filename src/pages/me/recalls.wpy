                  {{item.content}}
                </Elip>
                <!--</view>-->
              </view>
              <!-- 商品附属信息展示行 -->
              <view class="c-card__detail-row u-c-gray-darker">
                <view class="c-card__right-col u-width-50 u-c-gray u-text-right">
                  <Elip :line="line">@{{item.title}}</Elip>
                </view>
